    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Start and debug node-server",
            "preLaunchTask": "node-tsc-watch",
            "timeout": 10000,
            "program": "${workspaceRoot}/node-server/src/main.ts",
            "restart": true,
            "cwd": "${workspaceRoot}/node-server/src",
            "outFiles": [
                "${workspaceRoot}/node-server/build/**/*.js",
            ],
            "sourceMaps": true
        }
    ]
}
